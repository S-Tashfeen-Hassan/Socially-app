<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:weightSum="10"
    android:background="#000000">

    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!-- FrameLayout for story background + overlayed elements -->
    <FrameLayout
        android:id="@+id/storyFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/storyBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/wall2"
            android:scaleType="centerCrop"
            android:contentDescription="Story background" />

        <!-- Overlay (Profile + Name + Close Button + Story Progress Bars) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:weightSum="5"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/story_fill"
                    android:layout_marginHorizontal="2dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/story_fill"
                    android:layout_marginHorizontal="2dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/story_fill"
                    android:layout_marginHorizontal="2dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/story_fill"
                    android:layout_marginHorizontal="2dp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/story"
                    android:layout_marginHorizontal="2dp" />
            </LinearLayout>

            <!-- Profile Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="10"
                android:paddingTop="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/profile1"
                    app:civ_border_width="0dp"
                    app:civ_circle_background_color="#AFAFAF"
                    app:civ_border_color="#AFAFAF"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/storyUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gursky.studio"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  11h "
                        android:textColor="#AAAAAA"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/close"
                    android:padding="20dp"
                    app:tint="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <!-- Bottom control bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/activity_expanded"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/create_reel"
                android:paddingTop="3dp"
                app:tint="#ad7f5f" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.75"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/facebook"
                android:padding="5dp"
                app:tint="#ad7f5f" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.75"
            android:layout_width="0dp"
            android:layout_marginHorizontal="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/highlight_round"
                android:padding="5dp"
                app:tint="#ad7f5f" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp">
            <ImageView
                android:id="@+id/new_post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/more"
                android:padding="0dp"
                app:tint="#ad7f5f" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
